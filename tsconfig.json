{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "sourceMap": true,
    "outDir": "./dist/",
    "noEmitOnError": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": false,
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**.ts", "./test/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}
